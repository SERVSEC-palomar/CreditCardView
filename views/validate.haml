%h2 Validate Credit Card
- if @valid
	%p
  	= "Your Credit Card is valid "
%p  	
%form{ action: '/validate', method: 'get', id: 'user-form' }
  %label{ for: 'card_number' } Credit Card:
  %input{ type: 'text', name: 'card_number', id: 'card_number_id' }
  %input{ type: 'submit', id: 'validate-form-submit', value: 'submit' }
